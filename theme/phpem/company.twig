{% include '_header.twig' %}

    {% include '_pageheader.twig' with { title: record.title } %}

    <section class="page-content">
        <div class="container">
            <article>
                {% if record.subtitle %}
                    <h2>{{ record.subtitle }}</h2>
                {% endif %}

                {% if record.logo!="" %}
                    <div class="large-4 columns imageholder">
                        <img class="company-logo" src="{{ thumbnail(record.logo, 300, 300,'r') }}">
                    </div>
                {% endif %}
                {# display something introduction-like.. #}
                {% if record.introduction %}
                {{ record.introduction }}
                {% elseif record.teaser %}
                    {{ record.teaser }}
                {% else %}
                    <p>{{ record.excerpt(1000) }}</p>
                {% endif %}

                {# if the entry has a video, display it. #}
                {% if record.video is not empty %}
                    {{ record.video.responsive }}
                {% endif %}
                {{ record.body }}

                {% include '_recordfooter.twig' with {record: record} %}
            </article>

        </div>
    </section>

    <!-- End Main Content -->

    {#{% include '_aside.twig' %}#}

<!-- End Main Content and Sidebar -->



